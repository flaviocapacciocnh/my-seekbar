<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="3"
    android:padding="10dp"
    android:rowCount="8" >

    <ImageButton
        android:id="@+id/leftArrowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:background="@color/white"
        android:paddingRight="1dp"
        android:src="@drawable/left_arrow" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_column="1"
        android:layout_row="0"
        android:gravity="center_horizontal"
        android:padding="0dp" >

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:maxHeight="50dp"
            android:minHeight="50dp"
            android:padding="0dp"
            android:progressDrawable="@drawable/horizbar"
            android:thumb="@drawable/line" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:freezesText="true"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/rightArrowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="0"
        android:background="@color/white"
        android:paddingLeft="1dp"
        android:src="@drawable/right_arrow" />

    <TextView
        android:id="@+id/minProgressValueView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:freezesText="true"
        android:gravity="left"
        android:text="0"
        android:textStyle="bold"
        android:width="40dp" />

    <TextView
        android:id="@+id/maxProgressValueView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="1"
        android:freezesText="true"
        android:gravity="right"
        android:text="300"
        android:textStyle="bold"
        android:width="40dp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="2"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/minValueInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/min_hint"
            android:inputType="numberSigned" />

        <Button
            android:id="@+id/setMinButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/set_min" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="3"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/maxValueInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/max_hint"
            android:inputType="numberSigned" />

        <Button
            android:id="@+id/setMaxButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/set_max" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="4"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/result_view_4_broadcast_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:freezesText="true"
            android:hint="@string/waiting"
            android:paddingLeft="10dp"
            android:padding="5dp"
            android:textSize="@dimen/small_text_for_service_message" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/result_view_4_local_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:freezesText="true"
            android:hint="@string/waiting"
            android:paddingLeft="10dp"
            android:padding="5dp"
            android:textSize="@dimen/small_text_for_service_message" />
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="6"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/result_view_4_messenger_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:freezesText="true"
            android:hint="@string/waiting"
            android:paddingLeft="10dp"
            android:padding="5dp"
            android:textSize="@dimen/small_text_for_service_message" />
    </LinearLayout>
    
      <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="7"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/result_view_4_aidl_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:freezesText="true"
            android:hint="@string/waiting"
            android:paddingLeft="10dp"
            android:padding="5dp"
            android:textSize="@dimen/small_text_for_service_message" />
    </LinearLayout>

</GridLayout>