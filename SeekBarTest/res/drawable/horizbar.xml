<?xml version="1.0" encoding="UTF-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
   <item
     android:id="@android:id/background">
      <shape>
         <corners android:radius="2dip" />
         <solid android:color="@color/grey_progress_bar"/>
      </shape>
   </item>
   <item
     android:id="@android:id/progress">
      <clip>
         <shape>
            <corners
              android:radius="2dip" />
            <gradient
              android:startColor="@color/blu_bottom_gradient_progress_bar"
              android:endColor="@color/blu_top_gradient_progress_bar"
              android:angle="90" />
         </shape>
      </clip>
   </item>
</layer-list>